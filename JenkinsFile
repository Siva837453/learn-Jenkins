pipeline {
    agent {
        label 'AGENT-1'
    }
    option{
        (time:30, unit:'MINUTES')
        disableConcurrentBuilds()
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo this is Build'
            }
        }
        stage('Test') {
            steps {
                sh 'echo this is Test'
                sh 'sleep 20'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo this is Deploy'
            }
        }
    }
}